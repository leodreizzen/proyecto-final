generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  extensions = [pgvector(map: "vector")]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resolution {
  uuid String @id @default(uuid())

  initials String
  number   Int
  year     Int

  articles   Article[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Article {
  uuid String @id @default(uuid())

  resolution   Resolution @relation(fields: [resolutionUuid], references: [uuid])
  resolutionUuid String

  number Int
  content String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  references  Article[] @relation("ArticleReferences")
  referencedBy Article[] @relation("ArticleReferences")

  embeddding Unsupported("Vector")?
  @@unique([resolutionUuid, number])
}