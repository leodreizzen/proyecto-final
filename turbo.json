{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "worker:*": {
      "env": ["NODE_ENV", "OPEN_ROUTER_KEY", "USE_OPENROUTER", "OPENROUTER_API_KEY", "GOOGLE_API_KEY"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma", "prisma.config.ts"]
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.tsbuildinfo"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "worker#build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.tsbuildinfo"],
      "outputs": ["build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "env": ["DATABASE_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "REDIS_URL"],
      "cache": false,
      "persistent": true
    }
  }
}
