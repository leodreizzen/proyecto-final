{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma", "prisma.config.ts"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.tsbuildinfo"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "worker#build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.tsbuildinfo"],
      "outputs": ["build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
