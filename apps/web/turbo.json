{
  "$schema": "https://turborepo.com/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "dev": {
      "env": [
        "POLLING",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "REDIS_URL",
        "S3_ACCESS_KEY",
        "S3_SECRET_KEY",
        "S3_ENDPOINT",
        "S3_REGION",
        "S3_PUBLIC_BUCKET_NAME",
        "S3_INTERNAL_BUCKET_NAME",
        "PUBLIC_S3_ENDPOINT"
      ]
    },
    "build": {
      "env": [
        "POLLING",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "REDIS_URL",
        "S3_ACCESS_KEY",
        "S3_SECRET_KEY",
        "S3_ENDPOINT",
        "S3_REGION",
        "S3_PUBLIC_BUCKET_NAME",
        "S3_INTERNAL_BUCKET_NAME",
        "PUBLIC_S3_ENDPOINT"
      ]
    }
  }
}